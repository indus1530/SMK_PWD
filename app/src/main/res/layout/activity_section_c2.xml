<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <import type="android.view.View" />
        <!--<variable
            name="form"
            type="edu.aku.hassannaqvi.sk.models.Form" />-->
        <variable
            name="callback"
            type="edu.aku.hassannaqvi.smk_pwd.ui.sections.SectionC2Activity" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- seccbtitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvseccbtitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/seccbtitle" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- cb01  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvcb01"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_cb01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_cb01"
                            android:text="@string/cb01" />

                        <TextView
                            android:id="@+id/q_cb01"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_cb01"
                            android:layout_alignBottom="@id/qtxt_cb01"
                            android:text="@string/Q_cb01" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/cb01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/cb01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cb01a" />

                        <RadioButton
                            android:id="@+id/cb01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cb01b" />

                        <RadioButton
                            android:id="@+id/cb01c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cb01c" />

                        <RadioButton
                            android:id="@+id/cb01d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cb01d" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


