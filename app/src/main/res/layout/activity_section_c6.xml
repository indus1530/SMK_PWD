            </androidx.cardview.widget.CardView>

            <!-- cf01  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVcf01"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_cf01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_cf01"
                            android:text="@string/cf01" />

                        <TextView
                            android:id="@+id/q_cf01"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_cf01"
                            android:layout_alignBottom="@id/qtxt_cf01"
                            android:text="@string/Q_cf01" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/cf01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/cf01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cf01a" />

                        <RadioButton
                            android:id="@+id/cf01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cf01b" />

                        <RadioButton
                            android:id="@+id/cf01c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cf01c" />

                        <RadioButton
                            android:id="@+id/cf0196"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cf0196" />

                        <EditText
                            android:id="@+id/cf0196x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="AaBaCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz0123456789,. "
                            android:hint="@string/cf0196"
                            android:tag="cf0196"
                            android:text='@{cf0196.checked ? cf0196x.getText().toString() : ""}'
                            android:visibility='@{cf0196.checked? View.VISIBLE : View.GONE}' />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

