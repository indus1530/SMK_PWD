<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <!--<variable
            name="form"
            type="edu.aku.hassannaqvi.sk.models.Form" />-->
        <variable
            name="callback"
            type="edu.aku.hassannaqvi.smk_pwd.ui.sections.SectionF1Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- modftitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVmodftitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/modftitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- secfatitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVsecfatitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/secfatitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- hint  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVhint"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fam1  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfam1"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam1m" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fam1m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fam1m"
                        android:inputType="number"
                        android:maxLength="2"
                        app:maxValue="12"
                        app:minValue="1"
                        app:type="range" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam1y" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fam1y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fam1y"
                        android:inputType="number"
                        android:maxLength="4"
                        app:maxValue="2020"
                        app:minValue="2018"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fam2  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfam2"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam2m" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fam2m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fam2m"
                        android:inputType="number"
                        android:maxLength="2"
                        app:maxValue="12"
                        app:minValue="1"
                        app:type="range" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam2y" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fam2y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fam2y"
                        android:inputType="number"
                        android:maxLength="4"
                        app:maxValue="2020"
                        app:minValue="2018"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fam3  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfam3"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam3m" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fam3m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fam3m"
                        android:inputType="number"
                        android:maxLength="2"
                        app:maxValue="12"
                        app:minValue="1"
                        app:type="range" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fam3y" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fam3y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fam3y"
                        android:inputType="number"
                        android:maxLength="4"
                        app:maxValue="2020"
                        app:minValue="2018"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView><!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/red_overlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/green_overlay"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>