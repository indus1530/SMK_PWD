<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
        <!--<variable
            name="form"
            type="edu.aku.hassannaqvi.sk.models.Form" />-->
        <variable
            name="callback"
            type="edu.aku.hassannaqvi.smk_pwd.ui.sections.SectionF10Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- secfjtitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVsecfjtitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/secfjtitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fj01  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfj01"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fj01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fj01"
                            android:text="@string/fj01" />

                        <TextView
                            android:id="@+id/q_fj01"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fj01"
                            android:layout_alignBottom="@id/qtxt_fj01"
                            android:text="@string/Q_fj01" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fj01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fj01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fj01a" />

                        <RadioButton
                            android:id="@+id/fj01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fj01b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <!--Skip Fg02-->
        <LinearLayout
            android:id="@+id/fldGrpF1002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility='@{fj01b.checked? View.GONE : View.VISIBLE}'>

            <!-- hint  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVhint"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fj02  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfj02"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fj02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fj02"
                            android:text="@string/fj02" />

                        <TextView
                            android:id="@+id/q_fj02"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fj02"
                            android:layout_alignBottom="@id/qtxt_fj02"
                            android:text="@string/Q_fj02" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fj02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fj02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fj02a" />

                        <RadioButton
                            android:id="@+id/fj02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fj02b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fj03  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfj03"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fj03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fj03"
                            android:text="@string/fj03" />

                        <TextView
                            android:id="@+id/q_fj03"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fj03"
                            android:layout_alignBottom="@id/qtxt_fj03"
                            android:text="@string/Q_fj03" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fj03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fj03a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fj03a" />

                        <RadioButton
                            android:id="@+id/fj03b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fj03b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/red_overlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/green_overlay"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>