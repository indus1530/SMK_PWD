                    android:id="@+id/fldGrpCVff05"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_ff05"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_ff05"
                                android:text="@string/ff05" />

                            <TextView
                                android:id="@+id/q_ff05"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_ff05"
                                android:layout_alignBottom="@id/qtxt_ff05"
                                android:text="@string/Q_ff05" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/ff05"
