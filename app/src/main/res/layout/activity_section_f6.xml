                android:id="@+id/fldGrpCVf0604"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_f0604"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_f0604"
                            android:text="@string/f0604" />

                        <TextView
                            android:id="@+id/q_f0604"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_f0604"
                            android:layout_alignBottom="@id/qtxt_f0604"
                            android:text="@string/Q_f0604" />

                    </RelativeLayout>

                    <RadioGroup
