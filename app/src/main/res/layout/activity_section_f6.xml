                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_f0602"
                            android:layout_alignBottom="@id/qtxt_f0602"
                            android:text="@string/Q_f0602" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/f0602"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/f0602a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/f0602a" />

                        <RadioButton
                            android:id="@+id/f0602b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/f0602b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- f0603  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVf0603"
