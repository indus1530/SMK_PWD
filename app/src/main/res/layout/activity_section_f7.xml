<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
        <!--<variable
            name="form"
            type="edu.aku.hassannaqvi.sk.models.Form" />-->
        <variable
            name="callback"
            type="edu.aku.hassannaqvi.smk_pwd.ui.sections.SectionF7Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- secfgtitle  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVsecfgtitle"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/secfgtitle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fg01  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfg01"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fg01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fg01"
                            android:text="@string/fg01" />

                        <TextView
                            android:id="@+id/q_fg01"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fg01"
                            android:layout_alignBottom="@id/qtxt_fg01"
                            android:text="@string/Q_fg01" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fg01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fg01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg01a" />

                        <RadioButton
                            android:id="@+id/fg01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg01b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fg02  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfg02"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fg02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fg02"
                            android:text="@string/fg02" />

                        <TextView
                            android:id="@+id/q_fg02"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fg02"
                            android:layout_alignBottom="@id/qtxt_fg02"
                            android:text="@string/Q_fg02" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fg02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fg02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg02a" />

                        <RadioButton
                            android:id="@+id/fg02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg02b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <!--Skip Fg03-->
        <LinearLayout
            android:id="@+id/fldGrpF703"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility='@{fg02b.checked? View.GONE : View.VISIBLE}'>

            <!-- fg03  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfg03"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fg03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fg03"
                            android:text="@string/fg03" />

                        <TextView
                            android:id="@+id/q_fg03"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fg03"
                            android:layout_alignBottom="@id/qtxt_fg03"
                            android:text="@string/Q_fg03" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fg03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fg03a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg03a" />

                        <RadioButton
                            android:id="@+id/fg03b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg03b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <!-- fg04  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfg04"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fg04"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fg04"
                            android:text="@string/fg04" />

                        <TextView
                            android:id="@+id/q_fg04"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fg04"
                            android:layout_alignBottom="@id/qtxt_fg04"
                            android:text="@string/Q_fg04" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fg04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fg04a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg04a" />

                        <RadioButton
                            android:id="@+id/fg04b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg04b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fg05  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfg05"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fg05"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fg05"
                            android:text="@string/fg05" />

                        <TextView
                            android:id="@+id/q_fg05"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fg05"
                            android:layout_alignBottom="@id/qtxt_fg05"
                            android:text="@string/Q_fg05" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fg05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fg05a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg05a" />

                        <RadioButton
                            android:id="@+id/fg05b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fg05b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView><!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/red_overlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/green_overlay"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>