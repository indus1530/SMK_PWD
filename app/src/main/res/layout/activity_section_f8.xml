                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fh01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fh01"
                            android:text="@string/fh01" />

                        <TextView
                            android:id="@+id/q_fh01"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fh01"
                            android:layout_alignBottom="@id/qtxt_fh01"
                            android:text="@string/Q_fh01" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fh01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/fh01a"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fh01a" />

                        <RadioButton
